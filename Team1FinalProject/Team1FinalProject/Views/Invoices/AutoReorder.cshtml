@model Team1FinalProject.Models.InvoiceDet

@{
    ViewData["Title"] = "Auto Reorder";
}

<h2>Auto Reorder</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AutoReorder">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @Html.ListBox("SelectedBooks", (MultiSelectList)ViewBag.Books, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label asp-for="QuantityOrdered" class="control-label"></label>
                <input asp-for="QuantityOrdered" class="form-control" />
                <span asp-validation-for="QuantityOrdered" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Invoices">Back to Invoices</a>
</div>