@model ChangeFirstNameModel

<h2>Change First Name</h2>

@using (Html.BeginForm("ChangeFirstName", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        New First Name: 
        @Html.TextBox("NewFirstName", null, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Change First Name" class="btn btn-default" />
        </div>
    </div>

}