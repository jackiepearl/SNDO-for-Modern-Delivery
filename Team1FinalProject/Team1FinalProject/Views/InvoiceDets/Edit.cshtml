@model Team1FinalProject.Models.InvoiceDet

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Invoice Detail</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="InvoiceDetID" />
            <input type="hidden" asp-for="QuantityOrdered" />
            @*<input type="hidden" asp-for="BookCost" />*@
            <div class="form-group">
                <label asp-for="QuantityOrdered" class="control-label"></label>:
                @Html.DisplayFor(model => model.QuantityOrdered, new { @class = "form-control" })
                <span asp-validation-for="QuantityOrdered" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BookCost" class="control-label"></label>:
                <input asp-for="BookCost" class="form-control" />
                <span asp-validation-for="BookCost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuantityArrived" class="control-label"></label>
                <input asp-for="QuantityArrived" class="form-control" />
                <span asp-validation-for="QuantityArrived" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="BooksOnOrder">Back to List</a>
</div>
